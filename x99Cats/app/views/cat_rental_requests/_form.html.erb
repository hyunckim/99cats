<% if action == :edit %>
  <% action_url = cat_rental_request_url(catrentalrequest) %>
<% else %>
  <% action_url = cat_rental_requests_url %>
<% end %>


<form action="<%= action_url %>" method = "post">
  <% if action == :edit %>
    <input type="hidden" name="_method" value="PATCH">
  <% end %>

  <label for="cat_id">Cat ID</label>
  <input id ="cat_id"  type="text" name="catrentalrequest[cat_id]" value="<%= catrentalrequest.cat_id %>">

  <label for="start_date">Start Date</label>
  <input id="start_date" type="date" name="catrentalrequest[start_date]"
    value= <%= catrentalrequest.start_date %>>

  <label for="end_date">End Date</label>
  <input id="end_date" type="date" name="catrentalrequest[end_date]"
    value=<%= catrentalrequest.end_date %>>



  <label for="status">Status</label>
  <select id="status" name="catrentalrequest[status]">
    <option selected="selected" disabled="disabled" hidden></option>
    <option value = "PENDING" <%= catrentalrequest.status == "PENDING" ?
      "selected" : ""%>>PENDING</option>
    <option value = "APPROVED" <%= catrentalrequest.status == "APPROVED" ?
      "selected" : ""%>>APPROVED</option>
    <option value = "DENIED" <%= catrentalrequest.status == "DENIED" ?
      "selected" : ""%>>DENIED</option>
  </select>

  <input type="submit" value = "<%= action == :edit ? "edit" : "add" %>">
</form>
